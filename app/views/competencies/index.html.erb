<% @page_title = "All Competencies" %>
<h1>Competencies</h1>

<div class="row">
	<div class="col-md-6">
		<table class="table">
			<thead>
				<th></th>
				<th>Competency</th>
				<th>Competency Type</th>
			</thead>
			<tbody>
			<% @competencies.each do |competency| %>
				<tr>
					<td><%= link_to('', edit_competency_path(competency), {data: {toggle: "tooltip"}, title: 'edit', class: "glyphicon glyphicon-edit"}) %><%= link_to('', delete_competency_path(competency), {data: {toggle: "tooltip"}, title: 'delete', class: "glyphicon glyphicon-remove"})%></td>
					<td><%=link_to(competency["name"], competency_path(competency)) %></td>
					<td><%= competency.competency_type.name %></td>
				</tr>
			<% end %>
		<br />
			</tbody>
		</table>
	</div>
</div>
<div class="row"><%= link_to('New', new_competency_path)%></div>


